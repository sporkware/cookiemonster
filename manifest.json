{
  "manifest_version": 3,
  "name": "Cookie Consent Auto-Clicker",
  "version": "1.0",
  "description": "Automatically handles cookie consent popups on EU-mandated websites",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Consent Auto-Clicker"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
   "options_page": "options.html"
   
}